{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('rep_log_react') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('rep_log_react') }}
    <script>
        window.REP_LOG_APP_PROPS = {{ repLogAppProps|json_encode|raw }}
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        {# Lift history - react #}
        <div id="lift-stuff-app"></div>
    </div>

    <div class="row">
        {# LeaderBoard #}
        <div class="col-12 mt-5 mb-3">
            <div class="accordion-container" data-acc-init="show">
                <button class="accordion-btn">
                    <span>Lift Leader Board</span>
                    <span class="btn-icon"><i class="fa-solid fa-chevron-down"></i></span>
                </button>
                <div class="panel-wrapper">
                    <div class="panel">
                        <div class="table-responsive">
                            {{ include('reps/_leadboard.html.twig') }}
                        </div>
                    </div>
                </div>
        </div>
    </div>
{% endblock %}